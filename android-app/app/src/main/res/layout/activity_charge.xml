<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCharge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvHeaderEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evento: -"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvHeaderBooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booth: -"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvHeaderMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modo: -"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listo para cobrar"
                android:textColor="@color/purple_500"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Buscar producto">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvProductsLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando productos..."
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerProducts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/tvTotalLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOTAL"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:textSize="32sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Limpiar"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/gray"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCharge"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Cobrar"
                android:textStyle="bold"
                android:textSize="16sp"
                app:cornerRadius="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Overlay full-screen: verde=APROBADO / rojo=RECHAZADO -->
    <FrameLayout
        android:id="@+id/overlayResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="40dp">

                <TextView
                    android:id="@+id/overlayIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ…"
                    android:textSize="80sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/overlayStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APROBADO"
                    android:textColor="@android:color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"
                    android:layout_marginBottom="24dp" />

                <LinearLayout
                    android:id="@+id/overlayItemsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:id="@+id/overlayTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0,00"
                    android:textColor="@android:color/white"
                    android:textSize="52sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/overlayBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo restante: -"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/overlayReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFF8A80"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="48dp"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOverlayContinue"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continuar"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    app:strokeColor="@android:color/white"
                    app:cornerRadius="12dp" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
